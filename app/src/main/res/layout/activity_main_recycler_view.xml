<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/WMatchHWrap"
    android:background="@color/soft"
    tools:context="com.example.user.allmovietest.MainActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/movie_list"
        style="@style/MatchMatch" />

    <ProgressBar
        android:id="@+id/progress_bar"
        style="@style/WrapWrap"
        android:layout_gravity="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/error_loading_movie_list"
        style="@style/TextStyleTitles"
        android:layout_gravity="center"
        android:text="@string/error_loading"
        android:visibility="gone" />

    <TextView
        android:id="@+id/no_favorite_list"
        style="@style/TextStyle"
        android:layout_gravity="center"
        android:drawablePadding="@dimen/ten_dp"
        android:drawableTop="@drawable/ic_favorite"
        android:text="@string/no_favorite_movies"
        android:visibility="gone"/>

</FrameLayout>